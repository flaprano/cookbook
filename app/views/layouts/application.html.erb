<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    
    <header>
      <div class="navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to 'CookBook', root_path, class:"navbar-brand" %>
          </div>
          <%= render 'home/form_search' %>
        </div>
      </div>
    </header>
    
    <nav>
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <%= render 'home/list_collections' %>  
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
            <% if flash[:error] %>
              <%= flash[:error] %>
            <% end %>
        
            <%= yield %>
          </div>
        </div>
      </div>
    </nav>
    
    <footer>
      <div class="container">
        <div class="row">
          Social Recipes | Copyright 2017
        </div>
        <div class="row">
          <ul class="icones-redes-sociais">
    				<li><a class="facebook" href="https://facebook.com/cookbook">Facebook</a></li>
    				<li><a class="twitter" href="https://twitter.com/cookbook">Twitter</a>
    				<li><a class="instagram" href="https://instagram.com/cookbook">Instagram</a></li>
  			   </ul>
        </div>

      </div>
    </footer>
    
  </body>
</html>
